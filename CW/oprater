#include<iostream>
using namespace std;

int main(){
//  bitwise operater 
int num1 = 6;//0110
//left sift 
cout<<(num1<<1)<<endl; // 12 = 1100 = 8+4+0+0= 12
// right sift 
cout<<(num1>>1)<<endl;// 0011 = 0+0+2+1= 3
int num2= 2 ; //0010
// or 
cout<<( num1|num2)<<endl; //   0110|0010 = 0110 = 6
//and 
cout<<(num1&num2)<<endl;   // 0110&0011 = 0010 = 2 
// conditional ?  
//(condition) ? true-clause : false-clause
int a=4;
char name = 'a';
bool flag ;
a==name? flag = true: flag= false;
cout<<flag<<endl;//0
cout<<(&a)<<endl;



return 0;
}
